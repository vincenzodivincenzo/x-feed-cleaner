{
  "manifest_version": 3,
  "name": "X Feed Cleaner",
  "version": "1.0.0",
  "description": "Clean, distraction-free X/Twitter feed without data collection",
  
  "permissions": ["storage"],
  
  "content_scripts": [{
    "matches": [
      "https://twitter.com/*",
      "https://mobile.twitter.com/*", 
      "https://x.com/*",
      "https://mobile.x.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": false
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Feed Cleaner"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}